<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        android:layout_width="225dp"
        android:layout_height="310dp"
        android:backgroundTint="@color/subtleGrey"
        android:elevation="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            // event image

            <ImageView
                android:id="@+id/img_thumbnail_image"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/event1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">
                // category

                <TextView
                    android:id="@+id/txt_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="Sport"
                    android:textColor="@color/blue"
                    android:textSize="12sp" />
                // event name

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_thumbnail_event_name"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Mobile Legend Tournament"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
                // date

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_thumbnail_event_date"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/poppinssemibold"
                        android:text="12 Desember 2021"
                        android:textColor="@color/darkGrey"
                        android:textSize="12dp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>